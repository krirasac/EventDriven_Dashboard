<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style x:Key="NavBTN" TargetType="Button">
        <Setter Property="Background" Value="#FFB5C6B1"/>
        <Setter Property="Foreground" Value="#f7f7f5"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="BorderThickness" Value="3"/>
        <Setter Property="BorderBrush" Value="Transparent"/>

        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#FFDAFCD2"/>
                <Setter Property="Foreground" Value="#a8b468"/>
                <Setter Property="BorderBrush" Value="Transparent"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="#a8b468"/>
                <Setter Property="Foreground" Value="#FFDAFCD2"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="PageBG" TargetType="Canvas">
        <Setter Property="Background" Value="#f7f7f5"/>
    </Style>

    <Style x:Key="ListBoxStyle" TargetType="ListBox">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
    </Style>
    
    <Style TargetType="ListBoxItem">
            <Style.Triggers>
                <Trigger  Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFDAFCD2"/>
                    <Setter Property="Foreground" Value="#FF648139"/>
                </Trigger>

                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsMouseOver" Value="True"/>
                        <Condition Property="IsSelected" Value="True"/>
                    </MultiTrigger.Conditions>
                    <Setter Property="Background" Value="LightBlue"/>
                    <Setter Property="Foreground" Value="Black"/>
                </MultiTrigger>

                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="SteelBlue"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    <Style x:Key="NotePadStyle" TargetType="TextBox">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="Padding" Value="15"/>
    </Style>

    <Style x:Key="LabelStyle" TargetType="Label">
        <Setter Property="Foreground" Value="#FF6C6969"/>
        <Setter Property="FontFamily" Value="Franklin Gothic Heavy"/>
        <Setter Property="FontSize" Value="20"/>
    </Style>

    <Style x:Key="RejectBTN" TargetType="Button">
        <Setter Property="Background" Value="#dda92e"/>
        <Setter Property="Foreground" Value="#f7f7f5"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="BorderThickness" Value="3"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
    </Style>

    <Style x:Key="AcceptBTN" TargetType="Button">
        <Setter Property="Background" Value="#a8b468"/>
        <Setter Property="Foreground" Value="#f7f7f5"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="BorderThickness" Value="3"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
    </Style>

    <Style x:Key="ExtraBTN" TargetType="Button">
        <Setter Property="Background" Value="#FFE0DD67"/>
        <Setter Property="Foreground" Value="black"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="BorderThickness" Value="3"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
    </Style>

    <Style x:Key="Link" TargetType="Hyperlink">
        <Setter Property="TextDecorations" Value="None"/>
        <Setter Property ="Foreground" Value="#FFA8B468"/>
        <Setter Property="FontSize" Value="25"/>
        <Setter Property="FontFamily" Value="Franklin Gothic"/>
    </Style>

    <Style x:Key="ImageFit" TargetType="Image">
        <Setter Property="Margin" Value="0,0,0,50"/>
        <Setter Property="Height" Value="200"/>
        <Setter Property="Width" Value="200"/>
    </Style>

</ResourceDictionary>