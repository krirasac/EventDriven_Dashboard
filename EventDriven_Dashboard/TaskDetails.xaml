<UserControl x:Class="EventDriven_Dashboard.TaskDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EventDriven_Dashboard"
             mc:Ignorable="d" 
             d:DesignHeight="65" d:DesignWidth="759">
    <Grid>
        <Canvas Background="Azure" Margin="0,0,0,0" Width="759" Height="65">
            <CheckBox Height="22" Canvas.Left="28" Canvas.Top="16" Width="17" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="22"/>
            <Label x:Name="TaskName" Content="Task Name" Height="23" Canvas.Left="74" Canvas.Top="15" Width="165" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Label x:Name="Deadline" Content="Date" Height="23" Canvas.Left="260" Canvas.Top="15" Width="140" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <ComboBox x:Name="Status" Canvas.Left="422" Canvas.Top="15" Width="120" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <ComboBox x:Name="Priority" Canvas.Left="568" Canvas.Top="15" Width="120" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Button x:Name="EditBTN" Content="Button" Height="23" Canvas.Left="708" Canvas.Top="14" Width="32" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        </Canvas>
    </Grid>

</UserControl>
