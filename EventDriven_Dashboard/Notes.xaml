<Page x:Class="EventDriven_Dashboard.NotePad"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EventDriven_Dashboard"
      mc:Ignorable="d" 
      d:DesignHeight="495" d:DesignWidth="886"
      Title="Notes">

    <Canvas Background="Azure">
        <Rectangle Height="533" Width="250" HorizontalAlignment="Center" VerticalAlignment="Top" Fill="#FFA1FFAA" Canvas.Top="-22"/>
        <TextBox x:Name="Note" HorizontalAlignment="Center" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="571" Height="331" Canvas.Left="277" Canvas.Top="95"/>
        <TextBox x:Name="NoteSearch" HorizontalAlignment="Center" Height="33" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="173" Canvas.Left="20" Canvas.Top="29"/>
        <Button x:Name="NewNoteBTN" Content="+" HorizontalAlignment="Center" Height="27" VerticalAlignment="Top" Width="30" Canvas.Left="199" Canvas.Top="95" Click="NewNoteBTN_Click"/>
        <ListBox x:Name="NoteList" HorizontalAlignment="Center" Height="341" VerticalAlignment="Top" Width="209" ItemsSource="{Binding Filtered}" Canvas.Top="137" SelectionChanged="NoteList_SelectionChanged" Canvas.Left="20"/>
        <Button x:Name="NoteSearchBTN" Content="Button" Height="33" Canvas.Left="193" Canvas.Top="29" Width="36" HorizontalAlignment="Center" VerticalAlignment="Top" Click="NoteSearchBTN_Click"/>
        <Label x:Name="NoteCounter" Content="X Notes" Canvas.Left="20" Canvas.Top="96" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <TextBox x:Name="NoteTitle" Height="40" Canvas.Left="277" TextWrapping="Wrap" Text="Title" Canvas.Top="30" Width="571" HorizontalAlignment="Center" VerticalAlignment="Top" VerticalContentAlignment="Center" MouseLeave="ReturnDefaultText" MouseEnter="ClearText"/>
        <Button x:Name="NoteSaveBTN" Content="Save" Canvas.Left="767" Canvas.Top="444" HorizontalAlignment="Left" VerticalAlignment="Top" Width="81" Click="NoteSaveBTN_Click"/>
        <Button x:Name="NoteDeleteBTN" Content="Delete" Canvas.Left="671" Canvas.Top="444" Width="81" HorizontalAlignment="Left" VerticalAlignment="Center" Click="NoteDeleteBTN_Click"/>

    </Canvas>
</Page>
