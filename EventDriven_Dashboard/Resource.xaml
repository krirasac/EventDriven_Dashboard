<Page x:Class="EventDriven_Dashboard.Resource"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EventDriven_Dashboard"
      mc:Ignorable="d" 
      d:DesignHeight="495" d:DesignWidth="886"
      Title="Resource">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Design.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <Canvas Style="{StaticResource PageBG}">
        <Label Style="{StaticResource LabelStyle}" Content="Favorite Links" HorizontalAlignment="Left" VerticalAlignment="Center" Width="351" FontSize="48" Canvas.Left="52" Canvas.Top="49"/>

        <TextBlock Canvas.Left="228" Canvas.Top="178" Height="42" Width="150" HorizontalAlignment="Center" VerticalAlignment="Top">
        <Hyperlink Style="{StaticResource Link}" NavigateUri="https://www.canva.com/">Canva</Hyperlink>
        </TextBlock>
        <TextBlock Canvas.Left="228" Canvas.Top="278" HorizontalAlignment="Center" VerticalAlignment="Top">
         <Hyperlink Style="{StaticResource Link}" NavigateUri="https://github.com/">GitHub</Hyperlink>
        </TextBlock>
        <TextBlock Canvas.Left="228" Canvas.Top="381" HorizontalAlignment="Center" VerticalAlignment="Top">
     <Hyperlink Style="{StaticResource Link}" NavigateUri="https://mangadex.org/">Mangadex</Hyperlink>
        </TextBlock>
        <TextBlock Canvas.Left="572" Canvas.Top="176" HorizontalAlignment="Center" VerticalAlignment="Top">
     <Hyperlink Style="{StaticResource Link}" NavigateUri="https://www.webtoons.com/en/">Webtoon</Hyperlink>
        </TextBlock>
        <TextBlock Canvas.Left="572" Canvas.Top="278" HorizontalAlignment="Center" VerticalAlignment="Top">
    <Hyperlink Style="{StaticResource Link}" NavigateUri="https://www.youtube.com/">Youtube</Hyperlink>
        </TextBlock>
        <Image Height="81" Source="/Assets/youtube.png" Stretch="Fill" Width="83" Canvas.Left="456" Canvas.Top="254" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Image Height="83" Source="/Assets/webtoon.png" Stretch="Fill" Width="83" Canvas.Left="456" Canvas.Top="149" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Image Height="81" Source="/Assets/github.png" Stretch="Fill" Width="83" Canvas.Left="126" Canvas.Top="254" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Image Height="71" Source="/Assets/canva.png" Stretch="Fill" Width="71" Canvas.Left="132" Canvas.Top="161" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Image Height="70" Source="/Assets/mangadex.png" Stretch="Fill" Width="72" Canvas.Left="131" Canvas.Top="360" HorizontalAlignment="Left" VerticalAlignment="Top"/>
    </Canvas>
</Page>