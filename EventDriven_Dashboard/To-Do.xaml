<Page x:Class="EventDriven_Dashboard.To_Do"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EventDriven_Dashboard"
      mc:Ignorable="d" 
      d:DesignHeight="495" d:DesignWidth="886"
      Title="To_Do" Loaded="RetrieveData">

    <Canvas Background="Azure">
        <TextBox x:Name="TaskSearch" HorizontalAlignment="Left" Margin="55,39,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="737" Height="42"/>
        <Label Content="Task" HorizontalAlignment="Left" Margin="55,120,0,0" VerticalAlignment="Top" FontSize="22" Width="132" FontWeight="Bold" FontFamily="Franklin Gothic Demi"/>
        <Button x:Name="TaskAddBTN" Content="+" HorizontalAlignment="Left" VerticalAlignment="Top" Height="39" Width="45" RenderTransformOrigin="0.988,0.656" Canvas.Left="803" Canvas.Top="116" Click="TaskAddBTN_Click"/>
        <ListBox x:Name="Checklist" HorizontalAlignment="Center" Height="278" VerticalAlignment="Top" Width="793" d:ItemsSource="{Binding Incomplete}" Canvas.Left="55" Canvas.Top="167"/>
        <Button x:Name="TaskSearchBTN" Content="Search" HorizontalAlignment="Left" Margin="792,39,0,0" VerticalAlignment="Top" Width="56" Height="42"/>
        <Button x:Name="CompletedList" Content="Show Completed" Height="39" Canvas.Left="691" Canvas.Top="116" Width="107" HorizontalAlignment="Center" VerticalAlignment="Top" Click="ShowHide"/>
    </Canvas>
</Page>
